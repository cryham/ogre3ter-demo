{
    "files.associations": {
        "*.any": "c#",
        "*.glsl": "c",
        "*.compositor": "jsonc",
        // "*.material": "json",
        // "*.particle": "c",
        "*.mat": "c",
        "*.ini": "ruby",
    },
    "files.exclude": {
        ".vscode": false,
        "CMake/": true,
        "build/": true,
        "Dependencies/": true,
        //"**/Hlms/*": true,
        "bin*/": true,
        //"data/": true,
        "**/Plugins/": true,
        "**/*.bin": true,
        "**/*.so*": true,
        "**/*.cache": true,
        "**/*.zip": true,
    },
    "clangd.arguments": [
        "-clang-tidy-checks=-*,modernize-use-override",
        "--suggest-missing-includes",
        "--header-insertion=iwyu"
    ],
    "editor.suggest.localityBonus": true,
    "editor.cursorWidth": 2,
}
