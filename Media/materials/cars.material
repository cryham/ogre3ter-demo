{
	diffuse_map  ES_interior.png
	normal_map   ES_interior_normal.jpg
	//roughness_map  ES_interior.png
	//metalness_map  ES_interior.png

	// workflow specular_fresnel
	fresnel_coeff 0.01

	//diffuse		0.4 0.4 0.4
	specular	0.1 0.1 0.1
	roughness 0.7
	metalness 0.01
}

hlms ES_glass pbs
{
	diffuse_map  ES_glass.png

	// workflow specular_fresnel
	// fresnel_coeff 0.1

	specular	0.1 0.1 0.1
	roughness 0.2
	metalness 0.8

